<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vocabnomad="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@color/white"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/skill_img"
            android:layout_width="0dip"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/read"
            android:contentDescription="@string/skill"/>

        <ca.taglab.vocabnomad.widgets.TypefacedTextView
            android:id="@+id/skill_name"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="8dp"
            android:layout_gravity="center_vertical"
            android:textSize="35sp"
            vocabnomad:typeface="Roboto-Bold.ttf" />

        <ImageView
            android:id="@+id/expand_collapse"
            android:layout_width="0dip"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_action_expand"
            android:contentDescription="@string/action_expand"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:showDividers="middle"
        android:divider="?android:dividerHorizontal"
        android:animateLayoutChanges="true"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:background="@drawable/drop_shadow"
        android:layout_marginTop="0dp"
    />

</LinearLayout>