<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Card">

    <LinearLayout android:id="@+id/speak"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/white_clickable">

        <ImageView android:id="@+id/record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="4dp"
            android:src="@drawable/record"
            android:contentDescription="@string/record" />

        <ca.taglab.vocabnomad.widgets.TypefacedTextView
            android:id="@+id/status"
            style="@style/Text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="20sp"
            android:singleLine="true"
            android:text="@string/no_recording"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/recordings"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:showDividers="beginning|middle"
        android:divider="?android:dividerHorizontal"
        android:animateLayoutChanges="true" />

    <include layout="@layout/card_shaddow" />

</LinearLayout>