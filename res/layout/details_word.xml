<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vocabnomad="http://schemas.android.com/apk/res-auto"
    style="@style/Card"
    android:background="@drawable/white_clickable">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView android:id="@+id/image"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/image_placeholder"
            android:contentDescription="@string/skill"/>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--ca.taglab.vocabnomad.widgets.TypefacedTextView
                    android:id="@+id/title"
                    style="@style/Text"
                    android:singleLine="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textSize="40sp" /-->

                <ca.taglab.vocabnomad.widgets.AutoResizeTextView
                    android:id="@+id/title"
                    style="@style/Text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="none"
                    android:padding="4dp"
                    android:textSize="40sp"
                    vocabnomad:typeface="Roboto-Light.ttf" />

            </LinearLayout>

            <ca.taglab.vocabnomad.widgets.TypefacedTextView
                android:id="@+id/level"
                style="@style/Text.Medium"
                android:singleLine="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/card_shaddow" />

</LinearLayout>